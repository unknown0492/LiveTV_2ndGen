<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.excel.livetv">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".SplashLoading">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LiveTV">

        </activity>
        <activity
            android:name=".ShortcutsActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".TvList"
            android:label="TV List"
            android:theme="@style/AppThemeTranslucent" />
        <activity
            android:name=".TvListSimple"
            android:label="TV List"
            android:theme="@style/AppThemeTranslucent" />



        <receiver android:name=".Receiver">
            <intent-filter>
                <action android:name="download_iptv_channels" />
                <action android:name="connectivity_change" />
            </intent-filter>
        </receiver>

        <service android:name="com.excel.livetv.TVChannelDownloaderService" />

    </application>

</manifest>