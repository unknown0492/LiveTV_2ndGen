<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="40dp">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Mac Address"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Firmware Name"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="IP Address"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Reboot Box"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Root Browser"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="MBox Settings"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Android Settings"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Reboot to Recovery"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mac_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="00:00:00:00:00:0f"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_firmware_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="fw name"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_ip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="IP Address"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_reboot_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_click"
                android:gravity="center"
                android:padding="10dp"
                android:text="Reboot"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_root_browser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_click"
                android:gravity="center"
                android:padding="10dp"
                android:text="Open"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_mbox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_click"
                android:gravity="center"
                android:padding="10dp"
                android:text="Open MBox"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_click"
                android:gravity="center"
                android:padding="10dp"
                android:text="Open Settings"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_reboot_recovery"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_click"
                android:gravity="center"
                android:padding="10dp"
                android:text="Reboot to Recovery"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
